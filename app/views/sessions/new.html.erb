<%= form_for :session, url: session_path do |form| %>

  <div>
    <%= form.label :username %>
    <%= form.text_field :username, require: true %>
  </div>
  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>
  <div>
    <%= form.submit "Sign in" %>
  </div>
<% end %>
